  "version": "0.2.0",
  "configurations": [
  
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch client",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch server ",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/server/app.js",
      "stopOnEntry": true,
      "args": [],
      "cwd": "${workspaceRoot}/server",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": ["--nolazy"],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": false
    }
  ]
}
